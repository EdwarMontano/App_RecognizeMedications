<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cameraContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="@string/camera_title"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:implementationMode="performance"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/captureButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="4:3"
        tools:background="@android:color/black" />

    <!-- Overlay de resultados (por encima del preview) -->
    <com.chocoplot.apprecognicemedications.presentation.common.OverlayView
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/content_desc_overlay"
        android:importantForAccessibility="no"
        android:translationZ="8dp"
        app:layout_constraintTop_toTopOf="@id/viewFinder"
        app:layout_constraintBottom_toBottomOf="@id/viewFinder"
        app:layout_constraintStart_toStartOf="@id/viewFinder"
        app:layout_constraintEnd_toEndOf="@id/viewFinder" />

    <!-- Tiempo de inferencia -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/inferenceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/bg_inference_chip"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnPrimary"
    app:layout_constraintTop_toTopOf="@id/viewFinder"
    app:layout_constraintEnd_toEndOf="@id/viewFinder"
    tools:text="12 ms" />

    <!-- Gallery Thumbnail -->
    <ImageView
        android:id="@+id/galleryThumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        android:contentDescription="Gallery"
        app:layout_constraintBottom_toTopOf="@id/logoLeft"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo izquierdo -->
    <ImageView
        android:id="@+id/logoLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:contentDescription="@string/content_desc_logo_left"
        android:importantForAccessibility="no"
        android:src="@drawable/psi_logo_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo derecho -->
    <ImageView
        android:id="@+id/logoRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:contentDescription="@string/content_desc_logo_right"
        android:importantForAccessibility="no"
        android:src="@drawable/logouv_oficial_rojo_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BotÃ³n de captura (rojo) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/captureButton"
        style="?attr/floatingActionButtonStyle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/content_desc_capture"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
        app:fabCustomSize="72dp"
        app:backgroundTint="@color/shutter_red"
        app:tint="@color/on_shutter"
        app:srcCompat="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logoLeft"
        app:rippleColor="@color/on_shutter" />

</androidx.constraintlayout.widget.ConstraintLayout>
