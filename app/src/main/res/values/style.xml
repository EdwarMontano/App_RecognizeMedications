<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Requiere Material Components -->
    <style name="Widget.App.PillButton" parent="Widget.Material3.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/menu_button_tint</item>
        <item name="android:textColor">@color/menu_button_text</item>
        <item name="elevation">2dp</item>
    </style>
    
    <!-- Base ShapeAppearance style for the app -->
    <style name="ShapeAppearance.App" parent="ShapeAppearance.Material3.Corner.Medium">
        <!-- Default corner size, can be overridden by child styles -->
    </style>
    
    <style name="ShapeAppearance.App.Circle">
        <item name="cornerSize">50%</item>
    </style>
</resources>
